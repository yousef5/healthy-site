# ============================================
# Healthy Pharma - Apache Configuration
# SIMPLIFIED VERSION - No redirect loops
# ============================================

# Enable Rewrite Engine
RewriteEngine On
RewriteBase /

# ============================================
# HTTPS Redirect (uncomment if needed)
# ============================================
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [L,R=301]

# ============================================
# Case-Insensitive Product URL Redirects
# ============================================

# Without locale prefix â†’ redirect to /en/ (case-insensitive for convenience)
RewriteRule ^prices/omepure10ml/?$ /en/prices/omepure10ml/ [R=301,L,NC]
RewriteRule ^prices/germeten10ml/?$ /en/prices/germeten10ml/ [R=301,L,NC]
RewriteRule ^prices/alphadrink12/?$ /en/prices/alphadrink12/ [R=301,L,NC]
RewriteRule ^prices/choclocal15/?$ /en/prices/choclocal15/ [R=301,L,NC]
RewriteRule ^prices/alphamore15/?$ /en/prices/alphamore15/ [R=301,L,NC]
RewriteRule ^prices/irovit15/?$ /en/prices/irovit15/ [R=301,L,NC]
RewriteRule ^prices/alphafresh15/?$ /en/prices/alphafresh15/ [R=301,L,NC]
RewriteRule ^prices/jaufree10ml/?$ /en/prices/jaufree10ml/ [R=301,L,NC]

# Case variations - redirect to lowercase (NO NC flag to avoid loops!)
RewriteRule ^(en|ar)/prices/Omepure10ml/?$ /$1/prices/omepure10ml/ [R=301,L]
RewriteRule ^(en|ar)/prices/Germeten10ml/?$ /$1/prices/germeten10ml/ [R=301,L]
RewriteRule ^(en|ar)/prices/Alphadrink12/?$ /$1/prices/alphadrink12/ [R=301,L]
RewriteRule ^(en|ar)/prices/Choclocal15/?$ /$1/prices/choclocal15/ [R=301,L]
RewriteRule ^(en|ar)/prices/Alphamore15/?$ /$1/prices/alphamore15/ [R=301,L]
RewriteRule ^(en|ar)/prices/Irovit15/?$ /$1/prices/irovit15/ [R=301,L]
RewriteRule ^(en|ar)/prices/Alphafresh15/?$ /$1/prices/alphafresh15/ [R=301,L]
RewriteRule ^(en|ar)/prices/Jaufree10ml/?$ /$1/prices/jaufree10ml/ [R=301,L]
RewriteRule ^(en|ar)/prices/OMEPURE10ML/?$ /$1/prices/omepure10ml/ [R=301,L]
RewriteRule ^(en|ar)/prices/GERMETEN10ML/?$ /$1/prices/germeten10ml/ [R=301,L]
RewriteRule ^(en|ar)/prices/ALPHADRINK12/?$ /$1/prices/alphadrink12/ [R=301,L]
RewriteRule ^(en|ar)/prices/CHOCLOCAL15/?$ /$1/prices/choclocal15/ [R=301,L]
RewriteRule ^(en|ar)/prices/ALPHAMORE15/?$ /$1/prices/alphamore15/ [R=301,L]
RewriteRule ^(en|ar)/prices/IROVIT15/?$ /$1/prices/irovit15/ [R=301,L]
RewriteRule ^(en|ar)/prices/ALPHAFRESH15/?$ /$1/prices/alphafresh15/ [R=301,L]
RewriteRule ^(en|ar)/prices/JAUFREE10ML/?$ /$1/prices/jaufree10ml/ [R=301,L]

# ============================================
# Serve index.html for directory requests
# ============================================
DirectoryIndex index.html

# ============================================
# Error Documents
# ============================================
ErrorDocument 404 /404.html
ErrorDocument 403 /404.html
ErrorDocument 500 /404.html

# ============================================
# Caching & Performance
# ============================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# ============================================
# Compression
# ============================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ============================================
# Security Headers
# ============================================
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header unset Server
    Header always unset X-Powered-By
</IfModule>

# ============================================
# Prevent Directory Listing
# ============================================
Options -Indexes

# ============================================
# Block Access to Sensitive Files
# ============================================
<FilesMatch "(\\.htaccess|\\.env|\\.DS_Store)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
