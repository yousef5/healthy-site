{
  "buildCommand": "bun run build",
  "framework": "nextjs",
  "installCommand": "bun install",
  "regions": ["fra1"],
  "i18n": {
    "locales": ["ar", "en"],
    "defaultLocale": "ar"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
